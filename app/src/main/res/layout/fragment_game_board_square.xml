<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:tag="gameBoardWalkableElement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BaseSquareFragment">

    <ImageView
        android:id="@+id/gameBoardSquareBaseImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/board_square" />

    <ImageView
        android:id="@+id/gameBoardSquareOverlayImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/transparency" />
</FrameLayout>