<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DFDFDF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/transparency" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:id="@+id/firstFighter"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="0">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/firstFighterTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fighter 1"
                    android:textAlignment="center"
                    android:textColor="@color/fight_FighterTextColor"
                    android:textSize="24sp" />
            </TableRow>

            <TableLayout
                android:id="@+id/firstFighterCreatures"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="0">

                <TableRow
                    android:id="@+id/firstFighterCreature1Container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|fill_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView0"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:textAlignment="center"
                            android:textColor="@color/fight_CreatureTextColor" />
                    </LinearLayout>

                </TableRow>

                <TableRow

                    android:id="@+id/firstFighterCreature2Container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:textAlignment="center"
                            android:textColor="@color/fight_CreatureTextColor" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:id="@+id/firstFighterCreature3Container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:textAlignment="center"
                            android:textColor="@color/fight_CreatureTextColor" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:id="@+id/firstFighterCreature4Container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:textAlignment="center"
                            android:textColor="@color/fight_CreatureTextColor" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </TableLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="100">

            <ImageView
                android:id="@+id/battlemapImage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/grass_field"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/activeCreatureFighter1"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginStart="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/battlemapImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.12"
                app:layout_constraintStart_toStartOf="@+id/battlemapImage"
                app:layout_constraintTop_toTopOf="@+id/battlemapImage" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/attackView"
                android:layout_width="300dp"
                android:layout_height="300dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/activeCreatureFighter2"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintStart_toEndOf="@+id/activeCreatureFighter1"
                app:layout_constraintTop_toTopOf="@+id/battlemapImage"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/activeCreatureFighter2"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginEnd="15dp"
                android:scaleX="-1"
                app:layout_constraintBottom_toBottomOf="@+id/battlemapImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.88"
                app:layout_constraintStart_toStartOf="@+id/battlemapImage"
                app:layout_constraintTop_toTopOf="@+id/battlemapImage" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TableLayout
            android:id="@+id/secondFighter"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="0">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/secondFighterTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fighter 2"
                    android:textAlignment="center"
                    android:textColor="@color/fight_FighterTextColor"
                    android:textSize="24sp" />
            </TableRow>

            <TableLayout
                android:id="@+id/secondFighterCreatures"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0">

                <TableRow
                    android:id="@+id/secondFighterCreature1Container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:scaleX="-1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:textAlignment="center"
                            android:textColor="@color/fight_CreatureTextColor" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:id="@+id/secondFighterCreature2Container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:scaleX="-1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:textAlignment="center"
                            android:textColor="@color/fight_CreatureTextColor" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:id="@+id/secondFighterCreature3Container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:scaleX="-1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:textAlignment="center"
                            android:textColor="@color/fight_CreatureTextColor" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:id="@+id/secondFighterCreature4Container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:scaleX="-1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:textAlignment="center"
                            android:textColor="@color/fight_CreatureTextColor" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </TableLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>